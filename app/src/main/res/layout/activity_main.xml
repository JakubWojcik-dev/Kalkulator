<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/width1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/width2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/width3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/height1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/height2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/height3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/height4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/height5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/height6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />


    <TextView
        android:id="@+id/wyswietlacz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="gravity"
        android:gravity="right|center"
        android:paddingRight="20dp"
        android:text="0"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@id/height1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/CE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CE"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height1"
        app:layout_constraintRight_toLeftOf="@id/width2"
        app:layout_constraintBottom_toTopOf="@id/height2"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />

    <Button
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="back"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width2"
        app:layout_constraintTop_toBottomOf="@id/height1"
        app:layout_constraintRight_toLeftOf="@id/width3"
        app:layout_constraintBottom_toTopOf="@id/height2"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />

    <Button
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width3"
        app:layout_constraintTop_toBottomOf="@id/height1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/height2"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height2"
        app:layout_constraintRight_toRightOf="@id/width1"
        app:layout_constraintBottom_toTopOf="@id/height3"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />

    <Button
        android:id="@+id/sqrt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="sqrt"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width1"
        app:layout_constraintTop_toBottomOf="@id/height2"
        app:layout_constraintRight_toRightOf="@id/width2"
        app:layout_constraintBottom_toTopOf="@id/height3"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/sqr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="sqr"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width2"
        app:layout_constraintTop_toBottomOf="@id/height2"
        app:layout_constraintRight_toRightOf="@id/width3"
        app:layout_constraintBottom_toTopOf="@id/height3"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />

    <Button
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width3"
        app:layout_constraintTop_toBottomOf="@id/height2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/height3"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height3"
        app:layout_constraintRight_toRightOf="@id/width1"
        app:layout_constraintBottom_toTopOf="@id/height4"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width1"
        app:layout_constraintTop_toBottomOf="@id/height3"
        app:layout_constraintRight_toRightOf="@id/width2"
        app:layout_constraintBottom_toTopOf="@id/height4"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width2"
        app:layout_constraintTop_toBottomOf="@id/height3"
        app:layout_constraintRight_toRightOf="@id/width3"
        app:layout_constraintBottom_toTopOf="@id/height4"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width3"
        app:layout_constraintTop_toBottomOf="@id/height3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/height4"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height4"
        app:layout_constraintRight_toRightOf="@id/width1"
        app:layout_constraintBottom_toTopOf="@id/height5"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width1"
        app:layout_constraintTop_toBottomOf="@id/height4"
        app:layout_constraintRight_toRightOf="@id/width2"
        app:layout_constraintBottom_toTopOf="@id/height5"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />

    <Button
        android:id="@+id/nr6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width2"
        app:layout_constraintTop_toBottomOf="@id/height4"
        app:layout_constraintRight_toRightOf="@id/width3"
        app:layout_constraintBottom_toTopOf="@id/height5"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width3"
        app:layout_constraintTop_toBottomOf="@id/height4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/height5"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height5"
        app:layout_constraintRight_toRightOf="@id/width1"
        app:layout_constraintBottom_toTopOf="@id/height6"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width1"
        app:layout_constraintTop_toBottomOf="@id/height5"
        app:layout_constraintRight_toRightOf="@id/width2"
        app:layout_constraintBottom_toTopOf="@id/height6"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width2"
        app:layout_constraintTop_toBottomOf="@id/height5"
        app:layout_constraintRight_toRightOf="@id/width3"
        app:layout_constraintBottom_toTopOf="@id/height6"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width3"
        app:layout_constraintTop_toBottomOf="@id/height5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/plusMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+/-"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height6"
        app:layout_constraintRight_toRightOf="@id/width1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/nr0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width1"
        app:layout_constraintTop_toBottomOf="@id/height6"
        app:layout_constraintRight_toRightOf="@id/width2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />
    <Button
        android:id="@+id/comma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=","
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/width2"
        app:layout_constraintTop_toBottomOf="@id/height6"
        app:layout_constraintRight_toRightOf="@id/width3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="@color/teal_700"
        />

</androidx.constraintlayout.widget.ConstraintLayout>